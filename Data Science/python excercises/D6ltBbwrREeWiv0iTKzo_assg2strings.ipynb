def extract_chars(s):
    if len(s) < 2:
        return ""
    return s[:2] + s[-2:]

print(extract_chars('Ahmad Hassan'))

"""## Q2"""

def replace_first_char(s):
    if len(s) > 1:
        return s[0] + s[1:].replace(s[0], '$')
    return s

print(replace_first_char('Ahmad Ahmad'))

def swap_and_combine(str1, str2):
    if len(str1) >= 2 and len(str2) >= 2:
        str1 = str2[:2] + str1[2:]
        str2 = str1[:2] + str2[2:]
    return str1 + ' ' + str2

print(swap_and_combine('Ahmad', 'Hassan'))

def reverse_if_multiple_of_4(s):
    if len(s) % 4 == 0:
        return s[::-1]
    return s

print(reverse_if_multiple_of_4('Ahmaddd'))

def caesar_cipher(text, shift):
    result = ""
    for char in text:
        if char.isalpha():
            shift_amount = shift % 26
            new_char = chr((ord(char.lower()) - ord('a') + shift_amount) % 26 + ord('a'))
            if char.isupper():
                new_char = new_char.upper()
            result += new_char
        else:
            result += char
    return result

print(caesar_cipher('Ahmad', 3))