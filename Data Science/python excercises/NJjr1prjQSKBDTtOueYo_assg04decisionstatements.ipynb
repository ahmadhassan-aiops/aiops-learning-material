# 13. Print comma-separated binary numbers divisible by 5
def divisible_by_5_binary():
    binary_numbers = input("Enter comma-separated 4-digit binary numbers: ").split(',')
    divisible_by_5 = [bin_num for bin_num in binary_numbers if int(bin_num, 2) % 5 == 0]
    print(','.join(divisible_by_5))

print(divisible_by_5_binary())

# 14. Calculate the number of digits and letters in a string
def count_digits_letters():
    s = input("Enter a string: ")
    digits = sum(c.isdigit() for c in s)
    letters = sum(c.isalpha() for c in s)
    print(f"Letters {letters}")
    print(f"Digits {digits}")

print(count_digits_letters())




# 15. Check the validity of a password
import re

def check_password():
    password = input("Enter a password: ")
    if (len(password) >= 6 and len(password) <= 16 and
        re.search("[a-z]", password) and
        re.search("[A-Z]", password) and
        re.search("[0-9]", password) and
        re.search("[$#@]", password)):
        print("Password is valid.")
    else:
        print("Password is invalid.")

print(check_password())




# 16. Find numbers between 100 and 400 with all even digits
def find_even_digit_numbers():
    numbers = [str(i) for i in range(100, 401) if all(int(digit) % 2 == 0 for digit in str(i))]
    print(','.join(numbers))

print(find_even_digit_numbers())

