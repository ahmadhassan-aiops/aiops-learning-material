        if i in (3, 6):
            continue
        print(i, end=' ')
    print()


print(print_numbers())



# 9. Get the Fibonacci series between 0 and 50
def fibonacci_series():
    a, b = 0, 1
    while a <= 50:
        if a > 1:
            print(a, end=' ')
        a, b = b, a + b
    print()


print(fibonacci_series())



