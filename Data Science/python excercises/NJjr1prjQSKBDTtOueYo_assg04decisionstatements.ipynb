    print("Numbers divisible by 7 and multiple of 5 between 1500 and 2700:", numbers)

print(find_numbers())

# 2. Convert temperatures between Celsius and Fahrenheit
def convert_temperature():
    celsius = 60
    fahrenheit = (celsius * 9/5) + 32
    print(f"{celsius}°C is {fahrenheit} in Fahrenheit")

    fahrenheit = 45
    celsius = (fahrenheit - 32) * 5/9
    print(f"{fahrenheit}°F is {celsius} in Celsius")

print(convert_temperature())
